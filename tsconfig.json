{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["WebWorker"],
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": ["deno_build"],
  "ts-node": {
    // "compilerOptions": {
    //   "module": "CommonJS",
    //   "resolveJsonModule": true
    // },
    "moduleTypes": {
      "jest.config.ts": "cjs",
      "scripts/badges.ts": "cjs"
    }
  }
}
