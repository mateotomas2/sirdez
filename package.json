{
  "name": "sirdez",
  "version": "0.0.0-pre",
  "main": "build/index.js",
  "exports": {
    ".": {
      "node": "./build/index.js",
      "import": "./dist/sirdez.es.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest --coverage",
    "verify": "run-p format lint test",
